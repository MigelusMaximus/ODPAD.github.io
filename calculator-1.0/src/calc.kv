<CalculatorGuiLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: dp(35)
            size_hint: (1, .20)
            focus: True

        GridLayout:
            cols: 7
            rows: 5

            #Row1
            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "x^2"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.square2()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "x^3"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.square3()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "x^n"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.squareN()
                on_release: root.button_release()

            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "AC"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.clear()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "C"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.C()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "%"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.perc()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "/"
                background_color: (0,150/255,1,1)
                on_press: root.div()
                on_release: root.button_release()

            #Row2
            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "√x"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.sqroot2()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "3√x"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.sqroot3()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "n√x"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.sqrootN()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "7"
                on_press: root.button_press(7)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "8"
                on_press: root.button_press(8)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "9"
                on_press: root.button_press(9)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "*"
                background_color: (0,150/255,1,1)
                on_press: root.mul()
                on_release: root.button_release()

            #Row3
            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "x!"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.fact()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "π"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.pi()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "e"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.e()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "4"
                on_press: root.button_press(4)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "5"
                on_press: root.button_press(5)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "6"
                on_press: root.button_press(6)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(40)
                text: "-"
                background_color: (0,150/255,1,1)
                on_press: root.sub()
                on_release: root.button_release()

            #Row4
            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "mod"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.mod()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "sin"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.sin()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "cos"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.cos()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "1"
                on_press: root.button_press(1)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "2"
                on_press: root.button_press(2)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "3"
                on_press: root.button_press(3)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "+"
                background_color: (0,150/255,1,1)
                on_press: root.add()
                on_release: root.button_release()

            #Row5
            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "help"
                background_color: (0,150/255,1,1)
                on_press: root.help()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: "("
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.left_par()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: ")"
                background_color: (155/255, 155/255, 155/255, 1)
                on_press: root.right_par()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(20)
                text: ""
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "0"
                on_press: root.button_press(0)
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(40)
                text: "."
                on_press: root.period()
                on_release: root.button_release()

            Button:
                size_hint: (.2, .2)
                font_size: dp(25)
                text: "="
                background_color: (0,150/255,1,1)
                on_press: root.equals()
                on_release: root.button_release()
